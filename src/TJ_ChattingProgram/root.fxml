<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="TJ_ChattingProgram.RootController">
    <top>
        <TextFlow fx:id="textFlow" prefHeight="250.0" prefWidth="500.0" BorderPane.alignment="CENTER" />
    </top>
    <bottom>
        <VBox>
            <TextField fx:id="textField" >

            </TextField>
            <HBox alignment="BOTTOM_LEFT" spacing="50">
                <Button fx:id="btnStartEnd" alignment="CENTER" />
                <Button fx:id="btnSendMessage" alignment="CENTER" text="Send" />
            </HBox>
        </VBox>
    </bottom>


</BorderPane>
